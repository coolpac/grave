    "dev:all": "pnpm --parallel --filter @monorepo/api --filter @monorepo/web dev",
    "build": "pnpm --filter @monorepo/web build",
    "build:api": "pnpm --filter @monorepo/api build",
    "build:web": "pnpm --filter @monorepo/web build",
    "tunnel:api": "cloudflared tunnel --url http://localhost:3000"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@10.17.0+sha512.fce8a3dd29a4ed2ec566fb53efbb04d8c44a0f05bc6f24a73046910fb9c3ce7afa35a0980500668fa3573345bd644644fa98338fa168235c80f4aa17aa17fbef"
}
