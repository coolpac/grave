# ============================================
# Production Environment Variables
# ============================================
# Copy this file to .env and fill in your production values
# NEVER commit .env file to version control!

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ============================================
# Database Configuration
# ============================================
DATABASE_URL="postgresql://user:password@db-host:5432/ritual_shop?schema=public&sslmode=require"

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET="CHANGE-THIS-TO-A-STRONG-RANDOM-SECRET-MINIMUM-32-CHARACTERS"
JWT_EXPIRES_IN="7d"

# ============================================
# Redis Configuration (REQUIRED in production)
# ============================================
REDIS_URL="redis://:your-redis-password@redis-host:6379"

# ============================================
# Telegram Bot Configuration
# ============================================
BOT_TOKEN="your_production_telegram_bot_token"
CUSTOMER_BOT_TOKEN="your_production_customer_bot_token"
ADMIN_BOT_TOKEN="your_production_admin_bot_token"
TELEGRAM_MANAGER_CHAT_ID="your_production_manager_chat_id"
INIT_DATA_MAX_AGE_SEC=300

# ============================================
# Frontend & URLs
# ============================================
FRONTEND_URL="https://your-production-domain.com"
PUBLIC_URL="https://api.your-production-domain.com"

# ============================================
# Admin Configuration
# ============================================
ADMIN_WHITELIST="123456789,987654321"

# ============================================
# Cache Configuration
# ============================================
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_FILES=30d
LOG_TO_FILE=true

# ============================================
# Sentry Error Tracking (RECOMMENDED)
# ============================================
SENTRY_DSN="https://your-key@your-org.ingest.sentry.io/your-project"
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
APP_VERSION=1.0.0

# ============================================
# HTTP & Performance
# ============================================
SLOW_REQUEST_THRESHOLD=1000

# ============================================
# Health Check Configuration
# ============================================
MEMORY_HEALTH_THRESHOLD=90
DISK_HEALTH_THRESHOLD=10

# ============================================
# Graceful Shutdown
# ============================================
SHUTDOWN_TIMEOUT=10000

# ============================================
# Rate Limiting
# ============================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# ============================================
# Metrics
# ============================================
ENABLE_METRICS=true
