# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# ============================================
# Database Configuration
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/ritual_shop?schema=public"

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET="your-secret-key-change-in-production-minimum-32-characters"
JWT_EXPIRES_IN="7d"

# ============================================
# Redis Configuration (Optional)
# ============================================
REDIS_URL="redis://localhost:6379"

# ============================================
# Telegram Bot Configuration
# ============================================
BOT_TOKEN="your_telegram_bot_token"
CUSTOMER_BOT_TOKEN="your_customer_bot_token"
ADMIN_BOT_TOKEN="your_admin_bot_token"
TELEGRAM_MANAGER_CHAT_ID="your_manager_chat_id"
CUSTOMER_BOT_API_URL="http://localhost:8001"
ADMIN_BOT_API_URL="http://localhost:8002"
INIT_DATA_MAX_AGE_SEC=300

# ============================================
# Frontend & URLs
# ============================================
FRONTEND_URL="http://localhost:5173"
CLOUDFLARE_TUNNEL_URL=""
PUBLIC_URL="http://localhost:3000"

# ============================================
# Admin Configuration
# ============================================
ADMIN_WHITELIST=""

# ============================================
# Cache Configuration
# ============================================
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_FILES=14d
LOG_TO_FILE=false

# ============================================
# Sentry Error Tracking (Optional)
# ============================================
SENTRY_DSN=""
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0
APP_VERSION=1.0.0

# ============================================
# HTTP & Performance
# ============================================
SLOW_REQUEST_THRESHOLD=1000

# ============================================
# Health Check Configuration
# ============================================
MEMORY_HEALTH_THRESHOLD=90
DISK_HEALTH_THRESHOLD=10

# ============================================
# Graceful Shutdown
# ============================================
SHUTDOWN_TIMEOUT=10000

# ============================================
# Rate Limiting (Throttler)
# ============================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# ============================================
# Metrics (Optional)
# ============================================
ENABLE_METRICS=false
