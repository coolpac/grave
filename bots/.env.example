# ============================================
# TELEGRAM BOTS CONFIGURATION
# ============================================
# Скопируйте этот файл в .env и заполните значения
#
# ВАЖНО: Если у вас уже настроен BOT_TOKEN в ../.env.production,
# он будет использован автоматически для Customer Bot

# ============================================
# CUSTOMER BOT
# ============================================
# Токен бота для клиентов
# Если не указан, используется BOT_TOKEN
# Получить у @BotFather
CUSTOMER_BOT_TOKEN=

# URL мини-приложения (Web App)
WEBAPP_URL=https://optmramor.ru

# Порт для Customer Bot API
CUSTOMER_BOT_PORT=8001

# ============================================
# ADMIN BOT (ОПЦИОНАЛЬНО)
# ============================================
# Отдельный бот для администраторов
# Если не нужен - оставьте пустым, уведомления пойдут через Customer Bot
ADMIN_BOT_TOKEN=

# Telegram ID администратора для получения уведомлений
# Получить у @userinfobot или @getmyid_bot
# Используется TELEGRAM_MANAGER_CHAT_ID если не указан
ADMIN_CHAT_ID=
TELEGRAM_MANAGER_CHAT_ID=

# Список ID админов через запятую (кто может управлять через Admin Bot)
ADMIN_WHITELIST=

# Порт для Admin Bot API
ADMIN_BOT_PORT=8002

# ============================================
# ABANDONED CART BOT (СЕРВИС НАПОМИНАНИЙ)
# ============================================
# Это НЕ Telegram бот, а фоновый сервис!
# Он отправляет напоминания через Customer Bot
#
# Интервал проверки брошенных корзин (в минутах)
CART_CHECK_INTERVAL_MINUTES=60

# Задержка перед первым напоминанием (в часах)
REMINDER_DELAY_HOURS=2

# Максимальное количество напоминаний
MAX_REMINDERS=3

# Порт для Abandoned Cart Bot API
ABANDONED_CART_BOT_PORT=8003

# ============================================
# API CONFIGURATION
# ============================================
# URL бэкенд API
API_URL=http://localhost:3000/api

# URL Customer Bot API (для Abandoned Cart Bot)
CUSTOMER_BOT_API_URL=http://localhost:8001

# ============================================
# WEBHOOK (опционально)
# ============================================
# Использовать webhook вместо polling (true/false)
USE_WEBHOOK=false

# URL для webhook Customer Bot
CUSTOMER_BOT_WEBHOOK_URL=https://optmramor.ru/bots/customer

# URL для webhook Admin Bot
ADMIN_BOT_WEBHOOK_URL=https://optmramor.ru/bots/admin

# ============================================
# КАК ПОЛУЧИТЬ ТОКЕНЫ
# ============================================
# 1. Откройте @BotFather в Telegram
# 2. Отправьте /newbot
# 3. Следуйте инструкциям
# 4. Скопируйте токен и вставьте сюда
#
# Для получения ADMIN_CHAT_ID:
# 1. Откройте @userinfobot в Telegram
# 2. Нажмите Start
# 3. Скопируйте ваш ID
